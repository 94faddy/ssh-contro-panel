// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  name      String
  role      String    @default("DEVELOPER") // ADMIN, DEVELOPER
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  servers     Server[]
  scriptLogs  ScriptLog[]

  @@index([email])
  @@index([role])
}

model Server {
  id          Int       @id @default(autoincrement())
  name        String
  host        String
  port        Int       @default(22)
  username    String
  password    String
  isActive    Boolean   @default(true)
  status      String    @default("DISCONNECTED") // CONNECTED, DISCONNECTED, ERROR, CONNECTING
  lastChecked DateTime?
  systemInfo  Json?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  userId      Int

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  serverLogs  ServerLog[]
  scriptLogs  ScriptLog[]

  @@index([userId])
  @@index([status])
  @@index([host])
}

model ServerLog {
  id        Int      @id @default(autoincrement())
  serverId  Int
  logType   String   // COMMAND, ERROR, INFO, WARNING
  message   String   @db.Text
  data      Json?
  createdAt DateTime @default(now())

  server Server @relation(fields: [serverId], references: [id], onDelete: Cascade)

  @@index([serverId])
  @@index([logType])
  @@index([createdAt])
}

model ScriptLog {
  id         Int       @id @default(autoincrement())
  scriptName String
  command    String    @db.Text
  status     String    @default("RUNNING") // RUNNING, SUCCESS, FAILED, CANCELLED
  output     String?   @db.LongText
  error      String?   @db.Text
  startTime  DateTime  @default(now())
  endTime    DateTime?
  duration   Int?
  userId     Int
  serverId   Int

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  server Server @relation(fields: [serverId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([serverId])
  @@index([status])
  @@index([startTime])
}

model SystemSettings {
  key       String   @id @unique
  value     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([key])
}
